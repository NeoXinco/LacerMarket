<div class="row">
  <div class="col l6 offset-l3">

	<h4 class="center">Hai dimenticato la password?</h4>

	<br>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  	<%= devise_error_messages! %>

  		<div class="field">
    		<%= f.label :email %><br />
    		<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  		</div>

  		<br>

  		<div class="actions">
    		<%= f.submit "Inviami l'email per la reimpostare la password", class: "waves-effect waves-light btn btn-devise" %>
  		</div>
	<% end %>

		<br>

	<%= render "devise/shared/links" %>

  </div>
</div>